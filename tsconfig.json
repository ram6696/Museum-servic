{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "*": ["./node_modules/*"],
      "@app/*": ["./app/*"]
    },
    "lib": [
      "es7",
      "es2017",
      "dom"
    ]
  },
  "include": ["*", "app/**/*"],
  "exclude": ["app/locales"]
}
