{
  "extends": ["tslint-clean-code", "tslint:recommended"],
  "rulesDirectory": [
    "node_modules/tslint-clean-code/dist/src/"
  ],
  "rules": {
    "no-commented-out-code": true,
    "object-literal-sort-keys": false,
    "quotemark": [
      true,
      "single",
      "jsx-double",
      "avoid-escape"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "variable-name": {
      "options": [
        "check-format",
        "allow-leading-underscore",
        "allow-pascal-case"
      ]
    }
  },
  "jsRules": true
}
